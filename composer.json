{
    "name": "tu-usuario/servicio-pdf",
    "description": "Un servicio para generar y devolver archivos PDF a partir de una solicitud HTTP.",
    "type": "project",
    "require": {
        "firebase/php-jwt": "^6.0",
        "mpdf/mpdf": "^8.0",
        "vlucas/phpdotenv": "^5.6",
        "zircote/swagger-php": "^4.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"  
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"  
    },
    "scripts": {
        "test": "phpunit tests/"  
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
